<div class="container">
  <div class="row justify-content-center">
    <h1>Add your new skill</h1>
  </div>
  <div class="row justify-content-center">
    <%= simple_form_for @skill do |f| %>
      <%= f.input :name %>
      <%= f.input :unit_price %>
      <%= f.input :description %>
      <%= f.input :photo, as: :file %>
      <div class="row justify-content-center">
        <%= f.button :submit, 'Create Skill', class:'btn btn-ghost'  %>
      </div>
    <% end %>
  </div>

</div>

