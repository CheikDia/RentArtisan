<h1 class="">Skills Index</h1>

<div class="d-flex align-items flex-wrap">

<% @skills.each do |skill|%>

  <div class="card d-flex align-items m-3" style="width: 18rem;">

    <%= cl_image_tag(skill.photo.key, class: "card-img-top") %>
    <div class="card-body d-flex align-items">
      <p class="card-title "> <%= skill.name%> </p>

    </div>
    <a href="<%=skill_path(skill)%>" class="btn btn-primary">Voir plus</a>
  </div>
  <%end%>
</div>
